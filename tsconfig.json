{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["./src"],
    "module": "commonjs",
    "strict": true,
    "lib": ["es6"],
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
